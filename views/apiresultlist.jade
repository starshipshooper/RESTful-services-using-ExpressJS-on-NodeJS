extends layout
block content
  if (movielist)
      div(class='container' style='margin-top: 100px;')
        h1(style='text-align: center;') results
      each singleMovie in movielist
        div(class='container movieResultRow')
          a(href=singleMovie.Title)
            h1 #{singleMovie.Title}
              small (#{singleMovie.Year})
  else
    div(class='container')
      h1 #{notFound.Error}
      h1
        small '#{searched}' not listed on OMDb
